<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/task_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/app_name"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:paddingStart="4dp"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/check_box"
        android:layout_toEndOf="@id/check_box"
        android:layout_alignBottom="@id/check_box"
        android:layout_toStartOf="@id/important_icon"


        />
    <ImageView
        android:id="@+id/important_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_priority"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/check_box"
        android:layout_alignBottom="@id/check_box"

        />

</RelativeLayout>